@model Project.Models.AddToRoleModel
@{
    ViewBag.Title = "Add To Role";
}

<h2>Add user to role</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.SelectedRole, new SelectList(Model.Roles), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-default">Add</button>
}

